rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Forms collection
    match /forms/{formId} {
      // Allow creating a form only if the request is authenticated and createdBy matches the authenticated UID
      allow create: if request.auth != null && request.auth.uid == request.resource.data.createdBy;

      // Allow read/update/delete only for the creator
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.createdBy;

      // Allow public read for published forms
      // Support both legacy `published` at the root and newer `settings.published` field
      allow read: if resource.data.get('published', false) == true || (resource.data.get('settings', {}).get('published', false) == true);

      // Subcollection for responses
      match /responses/{responseId} {
        // Anyone can submit a response (e.g. anonymous or authenticated), but writes must include formId and answers
        allow create: if true;

        // Only the form owner can read/update/delete responses
        allow read, update, delete: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/forms/$(formId)).data.createdBy;
      }
    }

    // User profiles (minimal: users can read/write their own profile; admins can read all)
    match /users/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        request.auth.token.admin == true
      );

      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // Notifications broadcast collection
    match /notifications/{notificationId} {
      // Anyone signed in can read notifications
      allow read: if request.auth != null;

      // Only admins can create/update notifications
      allow create, update: if request.auth != null && (
        request.auth.token.admin == true ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    // Per-user notification state
    match /users/{userId}/notifications/{notificationId} {
      // A user can read/write only their own notification state
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // You can define other collection-level defaults here or keep everything else restricted
    // By default, all other reads/writes are denied except as defined above
  }
}
