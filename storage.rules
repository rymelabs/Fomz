rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read for logos by default (publicly readable via getDownloadURL). You can tighten this as needed.
    match /logos/{userId}/{allPaths=**} {
      // Only authenticated owners can write (upload/delete/overwrite) their own logos
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow read to anyone (or change to request.auth != null if you want to restrict reads)
      allow read: if true;
    }

    // Default: deny access
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
